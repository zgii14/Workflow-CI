name: heart-ci
conda_env: conda.yaml

entry_points:
  train:
    parameters:
      test_size:
        type: float
        default: 0.2
      n_estimators:
        type: int
        default: 100
      max_depth:
        type: int
        default: 5
      data_dir:
        type: str
        default: "heart_preprocessing"
    command: "python modelling.py --test_size {test_size} --n_estimators {n_estimators} --max_depth {max_depth} --data_dir {data_dir}"
